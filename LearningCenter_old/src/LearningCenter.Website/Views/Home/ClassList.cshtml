@model LearningCenter.Website.Models.ClassListViewModel

@{
    ViewBag.Title = "ClassList";
}

<head>
    <link rel="stylesheet" href="~/Content/style.css" />
</head>
<h2>Classes</h2>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
    </tr>
    @foreach (var class_list in Model.ClassLists)
    {
        <tr>
            <td>@class_list.Name</td>
            <td>@class_list.Description</td>
            <td>@string.Format("{0:C}", class_list.Price)</td>
        </tr>
    }
</table>

